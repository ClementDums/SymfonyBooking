<form method="post" action="{{ path('notif_delete', {'id': notif.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ notif.id) }}">
    <button class="btn">Delete</button>
</form>
